<h2>Welcome to Blocipedia</h2>
<h4>You are logged in using the email: <%= current_user.email %> </h4>


<h1>All Wikis</h1>
<% @wikis.each do |wiki| %>
  <p><%= link_to wiki.title, user.wiki_path(wiki.id) %></p>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
    </div>
  </div>
<% end %>

  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path(current_user, :wiki), class: 'btn btn-success' %>
  </div>
